<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>
<h1 class="mb-1 restaurant-show-title">編輯餐廳</h1>
<form action="/restaurants/{{restaurantData._id}}/edit?_method=PUT" method="POST">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">
        <p class="mb-1">
          <span class="text-secondary">
            店名：
          </span>
          <input class="form-control" type="text" placeholder="name" name="name" value="{{restaurantData.name}}" style="width:250px">
        </p>
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input class="form-control" type="text" placeholder="category" name="category" value="{{restaurantData.category}}">
        </p>
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input class="form-control" type="text" placeholder="location" name="location" value="{{restaurantData.location}}">
          <a href="{{restaurantData.google_map}}" class="text-secondary" target="_blank">
          </a>
        </p>
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input class="form-control" type="text" placeholder="phone" name="phone" value="{{restaurantData.phone}}">
        </p>
        <p class="mb-1">
          <span class="text-secondary">
            描述：
          </span>
          <input class="form-control" type="text" placeholder="description" name="description" size="50" value="{{restaurantData.description}}">
        </p>
        <p class="mb-1">
          <span class="text-secondary">
            圖片：
          </span>
          <input class="form-control" type="text" placeholder="image" name="image" size="50" value="{{restaurantData.image}}">
        </p>
        <button type="submit" class="btn btn-primary">儲存</button>
        <a href="/" class="btn btn-dark">返回</a>
      </div>
    </div>
  </div>
</form>
<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<nav class="bd-subnavbar py-2">
  <div class="container-xxl d-flex align-items-md-center">
    <form class="bd-search position-relative" action="/search">
      <input type="text" name="keyword" class="form-control d-inline mt-2" style="width:80%" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
        value="" aria-describedby="search-button">
      <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
    </form>
    <div class="dropdown mt-2 ms-3 ms-auto">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        排序
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="#">A - Z</a></li>
        <li><a class="dropdown-item" href="#">Z - A</a></li>
        <li><a class="dropdown-item" href="#">類別</a></li>
        <li><a class="dropdown-item" href="#">地區</a></li>
      </ul>
    </div>
  </div>
</nav>
<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">

        {{#each restaurantData}}
        <div class="card mb-3">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              {{!-- <p class="badge badge-pill badge bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </p> --}}
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>{{this.category}}
              </div>
              <a href="./restaurants/{{ this._id }}" class="badge bg-secondary" style="text-decoration:none">detail</a>
              <a href="./restaurants/{{ this._id }}/edit" class="badge bg-info" style="text-decoration:none"> edit</a>
              <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button class="badge bg-danger" type="submit">delete</button>
              </form>
            </div>
        </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>